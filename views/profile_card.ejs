<!DOCTYPE html>
<html>
<head>
<%- include('partials/gtm_head') %>
<style>
@font-face {
	font-family: 'Gotham';
	src: url('/tools/footer/Gotham Black Regular/Gotham Black Regular.ttf');
}

html, body {
	padding: 0;
	margin: 0;
	font-family: Gotham;
	background: black;


	--fsize: 22px;
	--beige: #fee28a;
	line-height: 24px;
	font-size: var(--fsize);
	color: var(--beige);
	height: 100%;
}

.frame {
	height: 100%;
    min-height: 100%;
  	background: black;
	overflow: hidden;
	text-align: center;
	padding: 0 3px;
	display: flex;
	flex-direction: column;
}

#name {
	border-bottom: 3px solid var(--beige);
	margin-bottom: 0.5em;
	padding-top: 6px;
	flex-shrink: 0;
	flex-grow: 0;
}

h1 {
	padding: 0;
	margin: 0;
	font-size: var(--fsize);
	font-weight: normal;
	color: white;
	text-align: center;
	line-height: 32px;
}

#name h1 {
	line-height: 48px;
}

#name h1 .pronouns {
	font-size: 12px;
}

.container {
	flex: 1;
	padding: 0 6px;
}

section {
	margin-top: 0.8em;
}

section:first-of-type,
section#flag {
	margin-top: 0.25em;
}

#flag {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
}

#flag img {
  height: auto;
  flex-shrink: 0;
}

dl {
  display: grid;
  grid-template-columns: max-content 1fr;
  column-gap: 0.75rem;
  row-gap: 0;
  margin: 0;
}

dt {
	text-align: right;
	color: #c9af55;
}

dd {
	text-align: left;
	margin: 0;
}

#play_info dl {
  margin: 0 auto; /* ‚Üê centers the block horizontally */
  width: fit-content;
}


p {
	margin-block-start: 0.15em;
	margin-block-end: 0;
}

p::first-letter {
  text-transform: uppercase;
}

#twitch {
	flex-grow: 0;
	flex-shrink: 0;
	position: absolute;
	bottom: 0;
	margin: 20px 0 12px;
	background: black;
	color: white;
	width: 100%;
	right: 0;
	left: 0;
}

#twitch .envelop {
	margin: 0 0.25em;
	border-radius: 25px;
	background: #4c297e;
	line-height: 32px;
}

#twitch img.twitch {
	position: absolute;
	top: -6px;
	right: 15px;
}

#twitch .login {
	position: absolute;
	top: 1px;
	left: 22px;
	width: calc(100% - 32px - 60px);
	font-size: 18px;
	line-height: 32px;

	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	text-align: center;
	vertical-align: middle;
}

</style>
</head>
<body><%- include('partials/gtm_body') %>

<div class="frame">
	<section id="name">
		<h1><%= (user.display_name || '').replace(/^\d+\.\s+/, '') %><% if (user.pronouns) { %> <span class="pronouns"><%= user.pronouns %></span><% } %></h1>
	</section>

	<div class="container">
		<section id="flag">
			<img
				src="/vendor/flag-icons/flags/4x3/<%= user.country_code.toLowerCase() %>.svg"
				width="64"
				alt="Country flag"
			>
			<dl class="info">
				<dt>Age:</dt><dd><%= age %></dd>
				<% if (user.city) { %>
					<dt>State:</dt><dd><%= user.city %></dd>
				<% } %>
			</dl>
		</section>

		<% if (user.description) { %>
		<section id="bio">
			<h1>Player bio</h1>
			<% for (const item of user.description.split(/[\r\n]+/)) { %>
				<p><%= item %></p>
			<% } %>
		</section>
		<% } %>

		<section id="play_info">
			<h1>Play info</h1>
			<dl>
				<% if (user.controller && user.controller != 'other') { %>
					<dt class="controller">Controller: </dt><dd class="controller"><%= user.controller === 'nes' ? 'Original NES' : user.controller === 'goofy-foot' ? 'Goofy-Foot' : 'Hyperkin Cadet' %></dd>
				<% } %>
				<dt>Style:</dt><dd><%= (user.style || '').toUpperCase() %></dd>
				<% for (const [level, pb] of Object.entries(pbs)) { %>
					<% if (pb) { %>
					<dt class="pb">PB <%= level %>:</dt><dd class="pb"><%= pb %></dd>
					<% } %>
				<% } %>
				<% if (user.elo_rating) { %>
					<dt class="elo">Elo: </dt><dd><%= elo_rating %><% if (user.elo_rank) { %> ( <%= user.elo_rank %> )<% } %></dd>
				<% } %>
				<% if (user.rival) { %>
					<dt class="rival">Rival: </dt><dd><%= user.rival.split(/\s*([,;(.!-]|because|cause|but)\s*/)[0] %></dd>
				<% } %>
			</dl>
		</section>

		<% if (user.interests) { %>
		<section id="interests">
			<h1>Interests</h1>
			<% for (const item of user.interests.split(/[\r\n]+/)) { %>
				<p><%= item %></p>
			<% } %>
		</section>
		<% } %>
	</div>

	<% if (!user.login.startsWith('__user')) { %>
		<div id="twitch">
			<div class="envelop">&nbsp;</div>
			<img class="twitch" src="/images/twitch_small.png" />
			<div class="login">
				<%= user.login %>
			</div>
		</div>
	<% } %>
</div>

<script>
let login = document.querySelector('#twitch .login');

function shrinkText() {
	const styles = getComputedStyle(login);

	login.style.fontSize = `${parseInt(styles.fontSize, 10) - 1}px`;
}

function checkShrink() {
	if (login.scrollWidth > login.clientWidth) {
		const styles = getComputedStyle(login);

		if (parseInt(styles.fontSize, 10) > 14) {
			shrinkText();
			window.requestAnimationFrame(checkShrink);
		}
	}
}

setTimeout(checkShrink, 100);

</script>
</body>
</html>